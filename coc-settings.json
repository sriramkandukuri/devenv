{
  "coc.preferences.hoverTarget": "float",
  /*  "coc.preferences.enableFloatHighlight": false, */
  "coc.preferences.rootPatterns": [".ccls", "compile_commands.json", ".git", ".hg", ".projections.json"],
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["go", "markdown", "javascript", "typescript", "json", "jsonc"],
  "coc.source.file.ignoreHidden": false,
  "prettier.printWidth": 160,
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "codeLens.enable": true,
  "git.addGBlameToVirtualText": true,
  "diagnostic.format": "%message [%source]",
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.warningSign": "W",
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "suggest.echodocSupport": true,
  "suggest.enablePreview": true,
  "suggest.timeout": 5000,
  "suggest.asciiCharactersOnly": false,
  "suggest.floatEnable": true,
  "suggest.detailField": "abbr",
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "eslint.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "typescript", "javascriptreact"],
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "languageserver": {
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      /* "args": ["-logfile", "/tmp/gopls.log", "-v", "-rpc.trace"], */
      "rootPatterns": ["go.mod", ".git/"],
      "disableWorkspaceFolders": true,
      "initializationOptions": {
        "staticcheck": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "caseSensitiveCompletion": true
      }
    },
    /*
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "highlight": { "lsRanges": true },
        "client": {
          "snippetSupport": true
        }
      }
    },
    */
    "clangd": {
      "command": "clangd",
      "args": ["--completion-style=detailed"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  }
}
